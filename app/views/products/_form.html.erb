<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<h1><%= form_title%></h1>

			<% if @product.errors.any? %>
				<div class="alert alert-danger">
					<ul>
						<% @product.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>



			<%= form_for @product do |form |%>
			<div class="form-group">
				<%= form.text_field :name, class: 'form-control input-lg', placeholder:'ingrese su nombre'%>
			</div>

			<div class="form-group">
				<%= form.text_field :url, class: 'form-control input-lg', placeholder:'ingrese las url'%>
			</div>

			<div class="form-group">
				<%= form.text_area :description, class: 'form-control input-lg', placeholder:'ingrese la descripciÃ³n'%>
			</div>
			<div>
				<%= form.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
			</div>
			<% end %>
		</div>
	</div>
</div>