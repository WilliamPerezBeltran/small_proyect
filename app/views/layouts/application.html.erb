<!DOCTYPE html>
<html>
  <head>
    <title>SmallProyect</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <% if flash[:notice]%>
      <div class="alert alert-info">
        <%= flash[:notice]%>
      </div>
    <% end %>


    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        Bienvenido  <strong><%= current_user.email %></strong>.
        <%= link_to 'Editar profile', edit_user_registration_path, :class => 'navbar-link' %> |
        <%= link_to "Salir ", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
      <% else %>
        <%= link_to "Registrarse", new_user_registration_path, :class => 'navbar-link'  %> |
        <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
      <% end %>
    </p>

    <%= yield %>
  </body>
</html>
